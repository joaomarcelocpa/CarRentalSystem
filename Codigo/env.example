# Variáveis de ambiente para Car Rental System

# ===========================================
# CONFIGURAÇÕES GERAIS
# ===========================================

# Ambiente (development, production)
NODE_ENV=development

# ===========================================
# FRONTEND (Next.js)
# ===========================================

# URL base da API do backend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api

# Porta do frontend
FRONTEND_PORT=3000

# ===========================================
# BACKEND (Spring Boot)
# ===========================================

# Porta do backend
BACKEND_PORT=8080

# Perfil Spring ativo
SPRING_PROFILES_ACTIVE=docker

# Configurações do banco de dados
# Para desenvolvimento (H2)
SPRING_DATASOURCE_URL=jdbc:h2:mem:testdb
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# Para produção (PostgreSQL)
# SPRING_DATASOURCE_URL=jdbc:postgresql://database:5432/rental_system
# SPRING_DATASOURCE_USERNAME=rental_user
# SPRING_DATASOURCE_PASSWORD=rental_password

# Configurações JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=true
SPRING_H2_CONSOLE_ENABLED=true

# Configurações JWT
APP_JWT_SECRET=mySecretKeyForDevelopment
APP_JWT_EXPIRATION=86400000

# ===========================================
# BANCO DE DADOS (PostgreSQL)
# ===========================================

# Configurações do PostgreSQL
POSTGRES_DB=rental_system
POSTGRES_USER=rental_user
POSTGRES_PASSWORD=rental_password
POSTGRES_PORT=5432

# ===========================================
# DOCKER
# ===========================================

# Configurações de rede
DOCKER_NETWORK=rental-network

# Configurações de volumes
BACKEND_LOGS_PATH=./backend/logs
POSTGRES_DATA_PATH=./postgres_data

# ===========================================
# NGINX (Produção)
# ===========================================

# Portas do Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# DESENVOLVIMENTO
# ===========================================

# Hot reload
WATCHPACK_POLLING=true

# Debug
DEBUG=true
LOG_LEVEL=DEBUG
